{
  "name": "kamajii",
  "version": "2.0.0",
  "description": "Kamajii is a minimal Electron Boilerplate with Parcel Pre-Compiled React, SCSS, and DevTool Extensions ready to go",
  "main": "./src/main.js",
  "renderer": "./build/index.html",
  "targets": {
    "renderer": {
      "publicUrl": "./",
      "context": "electron-renderer"
    }
  },
  "scripts": {
    "start": "electron .",
    "bundle": "run-s s-rm-build s-bundle",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "s-rm-build": "trash build, .parcel-cache",
    "s-bundle": "parcel build ./src/index.html --target renderer"
  },
  "build": {
    "appId": "com.kamajii.app",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "author": "Naomi Rubin",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.0.3",
    "electron-builder": "^22.7.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-alpha.3.2",
    "sass": "^1.26.8",
    "trash-cli": "^3.0.0"
  }
}
