{
  "name": "kamajii",
  "version": "2.0.0",
  "description": "Kamajii is a minimal Electron Boilerplate with Parcel (2.0) Pre-Compiled React, SCSS, and DevTool Extensions ready to go",
  "main": "./src/main.js",
  "renderer": "./bundle/index.html",
  "targets": {
    "renderer": {
      "publicUrl": "./",
      "context": "browser"
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "run-p p-dev-bundle p-dev-start",
    "bundle": "run-s s-rm-bundle s-bundle",
    "pack": "run-s s-rm-pack s-pack",
    "dist": "electron-builder",
    "p-dev-bundle": "parcel ./src/index.html --target renderer",
    "p-dev-start": "cross-env DEV_SERVER=true electron .",
    "s-rm-pack": "trash dist",
    "s-pack": "electron-builder --dir",
    "s-rm-bundle": "trash bundle, .parcel-cache",
    "s-bundle": "parcel build ./src/index.html --target renderer"
  },
  "build": {
    "appId": "com.kamajii.app",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "author": "Naomi Rubin",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "electron": "^9.0.3",
    "electron-builder": "^22.7.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-alpha.3.2",
    "sass": "^1.26.8",
    "trash-cli": "^3.0.0"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
